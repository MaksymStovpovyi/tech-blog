<div class="signup-wrapper">

    <form class="signup-form">
      <h2>Signup</h2>

      <div class="form-group">
        <label for="email-login">login:</label>
        <input class="form-input" type="text" id="login-signup" />
      </div>

      <div class="form-group">
        <label for="email-login">email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>

      <div class="form-group">
        <label for="password-login">password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>

      <div class="form-group signup-btns">
        <button id="signup-button" class="btn btn-primary" type="submit">submit</button>
        <button class="btn" id="to-signup"><a href="/login">back</a></button>
      </div>

    </form>

    <script src="/js/signup.js"></script>

</div>